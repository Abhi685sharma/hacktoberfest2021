// program to check whether a s=goiven string is a plandrome or not

#include <bits/stdc++.h>
using namespace std;

bool check_palindrome(string s, int start, int end)
{
    int length = s.size();
    if (length == 0 || length == 1)
        return true;
        while(start!=end){
    if (s[start] == s[end])
        return check_palindrome(s, start + 1, end - 1);
    else
        return false;
        }
        return true;
}
int main(){
    string s = "ninja";
    cout<<check_palindrome(s,0,5);
    return 0;
}
